@model OrderEditViewModel

@{
    ViewBag.Title = "Edit Order";
}

<form asp-controller="Home" asp-action="Edit" method="post" class="mt-3">
    <input hidden asp-for="Id" />
    <div class="form-group row">
        <div class="form-group">
            <label asp-for="Owner"></label>
            <input asp-for="Owner" class="form-control" />
            <span asp-validation-for="Owner" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="CupSize" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="CupSize" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<CupSize>()">
                <option value="">Please Select</option>
            </select>
            <span asp-validation-for="CupSize" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="CupStyle" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="CupStyle" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<CupStyle>()">
                <option value="">Please Select</option>
            </select>
            <span asp-validation-for="CupStyle" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="GlitterName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="GlitterName" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<GlitterName>()">
                <option value="">Please Select</option>
            </select>
            <span asp-validation-for="GlitterName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Status" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Status" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<Status>()">
                <option value="">Please Select</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
    </div>


    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>
