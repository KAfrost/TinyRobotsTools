@model HomeDetailsViewModel

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Order.Owner</h1>
            </div>
            <div class="card-body text-center">
                <h4>CupSize: @Model.Order.CupSize</h4>
                <h4>CupStyle: @Model.Order.CupStyle</h4>
                <h4>Glitter: @Model.Order.GlitterName</h4>
                <h4>Status: @Model.Order.Status</h4>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="index" class="btn btn-primary m-1">Back</a>
                <a asp-controller="home" asp-action="edit" asp-route-id="@Model.Order.Id" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>


        </div>
    </div>
</div>

